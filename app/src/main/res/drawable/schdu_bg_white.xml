<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:bottom="-2dp" android:right="-2dp" android:state_pressed="false">
        <shape>
            <!-- 填充的颜色 -->
            <solid android:color="#ffffff" />
            <!--边框的宽度及颜色-->
            <stroke android:width="0.5dp" android:color="#bfbfbf" />
        </shape>
    </item>

    <item android:bottom="-2dp" android:right="-2dp" android:state_pressed="true">
        <shape>
            <!-- 填充的颜色 -->
            <solid android:color="#EBEBEB" />
            <!--边框的宽度及颜色-->
            <stroke android:width="0.5dp" android:color="#bfbfbf" />
        </shape>
    </item>

</selector>