<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:bottom="-2dp" android:right="-2dp" android:state_pressed="false">
        <shape>
            <!--边框的宽度及颜色-->
            <stroke android:width="0.5dp" android:color="#bfbfbf" />
            <!-- 填充的颜色 -->
            <solid android:color="#0099FF" />
        </shape>
    </item>

    <item android:bottom="-2dp" android:right="-2dp" android:state_pressed="true">
        <shape>
            <!--边框的宽度及颜色-->
            <stroke android:width="0.5dp" android:color="#bfbfbf" />
            <!-- 填充的颜色 -->
            <solid android:color="#3A5FCD" />
        </shape>
    </item>

</selector>