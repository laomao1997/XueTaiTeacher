<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <!-- 顶部导航 -->
    <RelativeLayout
        android:id="@+id/ly_top"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_left_arrow_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人资料"
            android:textColor="#303030"
            android:textSize="18dp" />

    </RelativeLayout>

    <View
        android:id="@+id/v_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        app:layout_constraintTop_toBottomOf="@+id/ly_top" />

    <!-- 我的账号 -->
    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/tv_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/v_top"
        app:sDividerLineType="none"
        app:sLeftTextColor="#303030"
        app:sLeftTextSize="16dp"
        app:sLeftTextString="我的账号"
        app:sLeftViewMarginLeft="15dp"
        app:sRightTextColor="#AAAAAA"
        app:sRightTextSize="14dp"

        app:sRightTextString="10088886666"
        app:sRightViewMarginRight="15dp" />

    <!-- 修改密码 -->
    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/tv_modify_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/tv_account"
        app:sDividerLineType="none"
        app:sLeftTextColor="#303030"
        app:sLeftTextSize="16dp"
        app:sLeftTextString="修改密码"
        app:sLeftViewMarginLeft="15dp"
        app:sRightIconHeight="16dp"
        app:sRightIconMarginRight="15dp"
        app:sRightIconRes="@drawable/ic_right_arrow"
        app:sRightIconWidth="12dp" />

    <View
        android:id="@+id/v_middle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#dcdcdc"
        app:layout_constraintTop_toBottomOf="@+id/tv_modify_password" />

    <!-- 关于丁牛辅导 -->
    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/tv_about"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/v_middle"
        app:sDividerLineType="none"
        app:sLeftTextColor="#303030"
        app:sLeftTextSize="16dp"
        app:sLeftTextString="关于丁牛辅导"
        app:sLeftViewMarginLeft="15dp"
        app:sRightIconHeight="16dp"
        app:sRightIconMarginRight="15dp"
        app:sRightIconRes="@drawable/ic_right_arrow"
        app:sRightIconWidth="12dp" />

    <!--登出按钮-->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/btn_bg_red_white"
        android:text="退出登录"
        android:textColor="@color/colorRed"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_about"
        app:layout_constraintVertical_bias="0.2" />

</android.support.constraint.ConstraintLayout>