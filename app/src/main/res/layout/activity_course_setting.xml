<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical">

    <!-- 顶部导航 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_left_arrow_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="课程设置"
            android:textColor="#303030"
            android:textSize="18dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        android:layout_marginBottom="17dp"/>

    <!-- 1对1价格 -->
    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/tv_price"
        app:sDividerLineType="none"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        app:sLeftTextString="1对1价格"
        app:sLeftTextColor="#303030"
        app:sLeftTextSize="16dp"
        app:sLeftViewMarginLeft="15dp"
        app:sRightTextString="50"
        app:sRightTextColor="#AAAAAA"
        app:sRightTextSize="14dp"
        app:sRightIconRes="@drawable/ic_right_arrow"
        app:sRightIconHeight="16dp"
        app:sRightIconWidth="12dp"
        app:sRightIconMarginRight="15dp"/>

    <!-- 1对1开课时间 -->
    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/tv_schedule_time"
        app:sDividerLineType="none"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        app:sLeftTextString="1对1开课时间"
        app:sLeftTextColor="#303030"
        app:sLeftTextSize="16dp"
        app:sLeftViewMarginLeft="15dp"
        app:sRightIconRes="@drawable/ic_right_arrow"
        app:sRightIconHeight="16dp"
        app:sRightIconWidth="12dp"
        app:sRightIconMarginRight="15dp"/>

    <!-- 系列1对1 -->
    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/tv_series_1vs1"
        app:sDividerLineType="none"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        app:sLeftTextString="系列1对1"
        app:sLeftTextColor="#303030"
        app:sLeftTextSize="16dp"
        app:sLeftViewMarginLeft="15dp"
        app:sRightIconRes="@drawable/ic_right_arrow"
        app:sRightIconHeight="16dp"
        app:sRightIconWidth="12dp"
        app:sRightIconMarginRight="15dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp"/>

    <!-- 专题课查看 -->
    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/tv_tutorial"
        app:sDividerLineType="none"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        app:sLeftTextString="专题课查看"
        app:sLeftTextColor="#303030"
        app:sLeftTextSize="16dp"
        app:sLeftViewMarginLeft="15dp"
        app:sRightIconRes="@drawable/ic_right_arrow"
        app:sRightIconHeight="16dp"
        app:sRightIconWidth="12dp"
        app:sRightIconMarginRight="15dp"/>

    <!-- 1对1查看 -->
    <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
        android:id="@+id/tv_1vs1"
        app:sDividerLineType="none"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        app:sLeftTextString="1对1查看"
        app:sLeftTextColor="#303030"
        app:sLeftTextSize="16dp"
        app:sLeftViewMarginLeft="15dp"
        app:sRightIconRes="@drawable/ic_right_arrow"
        app:sRightIconHeight="16dp"
        app:sRightIconWidth="12dp"
        app:sRightIconMarginRight="15dp"/>


</LinearLayout>